{% extends 'base-admin.html.twig' %}

{% block body %}
  {{ parent() }}
  <div id="page-wrapper">
      <div class="row">
          <div class="col-lg-12">
              <h1 class="page-header">Towns</h1>
          </div>
          <!-- /.col-lg-12 -->
      </div>
      <!-- /.row -->
      <div class="row">

        <div class="table-responsive">
            <table class="table table-striped table-hover">
              <tr>
                <th>Name</th>
                <th>Province</th>
                <th>Autonomy (EU)</th>
                <th>Autonomy (ES)</th>
                <th>Autonomy (CA)</th>
                <th>Lat</th>
                <th>Lng</th>
                <th>Actions</th>
              </tr>
              {% for town in towns %}
                <tr>
                  <td>{{ town.izena }}</td>
                  <td>{{ town.probintzia }}</td>
                  <td>{{ town.autonomiErkidegoaEus }}</td>
                  <td>{{ town.autonomiErkidegoa }}</td>
                  <td>{{ town.autonomiErkidegoaCa}}</td>
                  <td>{{ town.latitudea }}</td>
                  <td>{{ town.longitudea }}</td>
                  <td class="actions">
                    <a href="{{ path('aml_user_view', {'id': town.id}) }}" class="btn btn-sm btn-info">View</a>
                    <a href="{{ path('aml_user_edit', {'id': town.id}) }}" class="btn btn-sm btn-primary">Edit</a>
                    <a href="#" class="btn btn-sm btn-danger">Delete</a>
                  </td>
                </tr>
              {% endfor %}
            </table>
        </div>
      </div>
      <!-- /.row -->
  </div>
{% endblock %}
