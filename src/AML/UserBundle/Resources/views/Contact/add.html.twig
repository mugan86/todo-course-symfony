{% extends 'layout.html.twig' %}

{% block body %}
  {{ parent() }}
  <div class="main container">
    <div class="row well">
      <div class="col-md-6">
        <div class="page-header">
          <h2>New user</h2>
        </div>
        {{ form_start(form, { 'attr' : {'role': 'form'} })}}

        <div class="form-group">
          {{ form_label(form.email) }}
          {{ form_widget(form.email, { 'attr': {'class' : 'form-control', 'placeholder' : 'Your email'} }) }}
          <span class="text-danger"> {{ form_errors(form.email)}}</span>
        </div>
        <div class="form-group">
          {{ form_label(form.message) }}
          {{ form_widget(form.message, { 'attr': {'class' : 'form-control', 'placeholder' : 'Your message'} }) }}
          <span class="text-danger"> {{ form_errors(form.message)}}</span>
        </div>

        <p>
		        {{ form_widget(form.save, {'label' : 'Send message', 'attr': {'class': 'btn btn-success'}}) }}
		    </p>
        {{ form_end(form)}}
      </div>
    </div>
  </div>

{% endblock %}
